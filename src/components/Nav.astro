---
// library import
import { Icon } from "astro-icon";

// component import
import Link from "./Link.astro";

// data import
import navData from "../data/navData";
---

<nav>
  <div class="flex justify-between box-border max-w-screen-2xl m-auto p-3 items-center">
    <a href="/">
      <Icon name="home" width="60" />
    </a>
    <ul>
      {
        navData.map((item) => (
          <a class="underline text-xl text-blue-600 hover:text-blue-800 visited:text-purple-600 px-3" href={item.path}>{item.name}</a>
        ))
      }
    </ul>
  </div>
  <hr class="mb-2">
</nav>

<script>
  import "../js/nav.js";
</script>
