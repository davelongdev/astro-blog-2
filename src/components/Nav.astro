---
// library import
import { Icon } from "astro-icon";

// component import
import Link from "./Link.astro";

// data import
import navData from "../data/navData";
---

<nav>
  <div class="flex justify-between">
    <a href="/">
      <Icon name="home" width="60" />
    </a>
    <ul>
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            style="primary"
            isFilled={true}
            data-navLink
            border-visible={true}
          />
        ))
      }
    </ul>
  </div>
  <hr class="mb-2">
</nav>

<script>
  import "../js/nav.js";
</script>
