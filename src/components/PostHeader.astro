---
// library imports
import { Image } from "@astrojs/image/components";

// utils imports
import { slugify, formatDate } from "../js/utils";

const { tag, title, author, date, image } = Astro.props;
---

<header>
  <div class="flex flex-col items-center">
    <div class="my-2 mx-3">
      <a class="py-1.5 px-2 border rounded-md bg-slate-400" href={`/category/${slugify(tag)}`}>{tag}</a>
    </div>
    <h1 class="text-lg font-medium m-3">{title}</h1>
    <h2 class="text-lg m-3">
      by <a href={`/author/${slugify(author)}`}>{author}</a> â€¢ {
        formatDate(date)
      }
    </h2>
  <Image
    src={image.src}
    alt={image.alt}
    width={300}
    height={150}
    format="avif"
    fit="cover"
    quality={80}
    aspectRatio="5:2"
    class="m-3 rounded-md max-w-full"
  />
  </div>
</header>
