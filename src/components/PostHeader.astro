---
// library imports
import { Image } from "@astrojs/image/components";

// utils imports
import { slugify, formatDate } from "../js/utils";

const { category, title, author, date, image } = Astro.props;
---

<header>
  <div>
    <div>
      <a href={`/category/${slugify(category)}`}>{category}</a>
    </div>
    <h1>{title}</h1>
    <p>
      by <a href={`/author/${slugify(author)}`}>{author}</a> â€¢ {
        formatDate(date)
      }
    </p>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width={1200}
    height={600}
    format="avif"
    fit="cover"
    quality={80}
    aspectRatio="5:2"
    class="hero-image"
  />
</header>
