---
// component import
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Page Not Found" description="404 | Page Not Found">
  <div>
    <div>
      <h1 class="text-xl text-center mt-36">The page you're trying to reach has not been found.</h1>
      <p class="text-xl text-center my-14">Please try a different address. <br/><br/> Thanks!</p>
    </div>
    <div class="text-center mb-36">
      <a
      class="py-1.5 px-2 border rounded-md bg-slate-400"
      href="/"
      >Go Home</a>
    </div>
  </div>
</MainLayout>
