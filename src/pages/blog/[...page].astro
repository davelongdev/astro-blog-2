---
// component import
import MainLayout from "../../layouts/MainLayout.astro";
import PostCard from "../../components/PostCard.astro";
import CategoryCloud from "../../components/CategoryCloud.astro";
import Pagination from "../../components/Pagination.astro";

// utils imports
import { formatBlogPosts } from "../../js/utils";

export async function getStaticPaths({ paginate }) {
  const allPosts = await Astro.glob("./*.md");
  const formattedPosts = formatBlogPosts(allPosts, {});

  return paginate(formattedPosts, {
    pageSize: 4,
  });
}

const { page } = Astro.props;
---

<MainLayout title="My Blog">
  <section>
    <h1 class="text-center text-3xl my-16">New Blog Posts</h1>
    <div class="grid grid-cols-1 justify-items-center lg:grid-cols-2 max-w-6xl mx-auto">
      {
        page.data.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            tagType="h2"
          />
        ))
      }
    </div>
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </section>
  <aside class="flex justify-center">
    <div class="flex justify-center flex-col">
      <h2 class="text-xl block font-medium m-2 text-center" >Blog Categories</h2>
      <CategoryCloud showCount={true}/>
    </div>
  </aside>
</MainLayout>
